<?xml version='1.0' encoding='utf-8'?>
<widget id="org.thaliproject.postcardapp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PostCardApp</name>
    <description>
        A sample thali app which demonstrate the basic features.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Thali Project team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="http://localhost:5000/*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="assets/android/res/drawable-ldpi/icon.png" />
        <icon density="mdpi" src="assets/android/res/drawable-mdpi/icon.png" />
        <icon density="hdpi" src="assets/android/res/drawable-hdpi/icon.png" />
        <icon density="xhdpi" src="assets/android/res/drawable-xhdpi/icon.png" />
        <splash density="land-hdpi" src="assets/android/res/drawable-land-hdpi/screen.png" />
        <splash density="land-ldpi" src="assets/android/res/drawable-land-ldpi/screen.png" />
        <splash density="land-mdpi" src="assets/android/res/drawable-land-mdpi/screen.png" />
        <splash density="land-xhdpi" src="assets/android/res/drawable-land-xhdpi/screen.png" />
        <splash density="port-hdpi" src="assets/android/res/drawable-port-hdpi/screen.png" />
        <splash density="port-ldpi" src="assets/android/res/drawable-port-ldpi/screen.png" />
        <splash density="port-mdpi" src="assets/android/res/drawable-port-mdpi/screen.png" />
        <splash density="port-xhdpi" src="assets/android/res/drawable-port-xhdpi/screen.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
        <preference name="EnableViewportScale" value="false" />
        <preference name="KeyboardDisplayRequiresUserAction" value="false" />
        <preference name="HideKeyboardFormAccessoryBar" value="false" />
        <preference name="KeyboardShrinksView" value="true" />
        <preference name="SuppressesIncrementalRendering" value="true" />
        <preference name="DisallowOverscroll" value="true" />
        <preference name="SuppressesLongPressGesture" value="false" />
        <preference name="Suppresses3DTouchGesture" value="false" />
        <preference name="AllowInlineMediaPlayback" value="true" />
        <feature name="CDVWKWebViewEngine">
            <param name="ios-package" value="CDVWKWebViewEngine" />
        </feature>
        <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
        <feature name="StatusBar">
            <param name="ios-package" onload="true" value="CDVStatusBar" />
        </feature>
        <preference name="StatusBarOverlaysWebview" value="true" />
        <preference name="StatusBarStyle" value="lightcontent" />
        <preference name="TopActivityIndicator" value="white" />
        <preference name="target-device" value="universal" />
        <icon height="180" src="assets/ios/Resources/icons/icon-60@3x.png" width="180" />
        <icon height="60" src="assets/ios/Resources/icons/icon-60.png" width="60" />
        <icon height="120" src="assets/ios/Resources/icons/icon-60@2x.png" width="120" />
        <icon height="76" src="assets/ios/Resources/icons/icon-76.png" width="76" />
        <icon height="152" src="assets/ios/Resources/icons/icon-76@2x.png" width="152" />
        <icon height="40" src="assets/ios/Resources/icons/icon-40.png" width="40" />
        <icon height="80" src="assets/ios/Resources/icons/icon-40@2x.png" width="80" />
        <icon height="57" src="assets/ios/Resources/icons/icon.png" width="57" />
        <icon height="114" src="assets/ios/Resources/icons/icon@2x.png" width="114" />
        <icon height="72" src="assets/ios/Resources/icons/icon-72.png" width="72" />
        <icon height="144" src="assets/ios/Resources/icons/icon-72@2x.png" width="144" />
        <icon height="29" src="assets/ios/Resources/icons/icon-small.png" width="29" />
        <icon height="58" src="assets/ios/Resources/icons/icon-small@2x.png" width="58" />
        <icon height="87" src="assets/ios/Resources/icons/icon-small@3x.png" width="87" />
        <icon height="50" src="assets/ios/Resources/icons/icon-50.png" width="50" />
        <icon height="100" src="assets/ios/Resources/icons/icon-50@2x.png" width="100" />
        <!-- <icon height="167" src="assets/ios/Resources/icons/icon-ipadpro@2x.png" width="167" /> -->
        <splash height="480" src="assets/ios/Resources/splash/Default~iphone.png" width="320" />
        <splash height="960" src="assets/ios/Resources/splash/Default@2x~iphone.png" width="640" />
        <splash height="1024" src="assets/ios/Resources/splash/Default-Portrait~ipad.png" width="768" />
        <splash height="2048" src="assets/ios/Resources/splash/Default-Portrait@2x~ipad.png" width="1536" />
        <splash height="768" src="assets/ios/Resources/splash/Default-Landscape~ipad.png" width="1024" />
        <splash height="1536" src="assets/ios/Resources/splash/Default-Landscape@2x~ipad.png" width="2048" />
        <splash height="1136" src="assets/ios/Resources/splash/Default-568h@2x~iphone.png" width="640" />
        <splash height="1334" src="assets/ios/Resources/splash/Default-667h.png" width="750" />
        <splash height="2208" src="assets/ios/Resources/splash/Default-736h.png" width="1242" />
        <splash height="1242" src="assets/ios/Resources/splash/Default-Landscape-736h.png" width="2208" />
    </platform>
    <preference name="windows-target-version" value="10.0" />
    <hook src="app/jxcore/hook.js" type="before_build" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-statusbar" spec="~2.0.0" />
    <plugin name="cordova-plugin-camera" spec="~2.0.0" />
    <plugin name="cordova-plugin-wkwebview-engine" spec="~1.0.1" />
    <plugin name="cordova-plugin-keyboard" spec="~1.1.3" />
</widget>
